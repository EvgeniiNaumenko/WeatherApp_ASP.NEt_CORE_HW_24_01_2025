@model Weather
@{
    ViewData["Title"] = "Результат погоды";
}

<div class="container mt-4">
    <div class="card mx-auto" style="max-width: 400px;">
        <div class="card-body text-center">
            <h2 class="card-title">Погода в @Model.City</h2>
            <p class="card-text">Температура: <strong>@Model.Temperature</strong></p>
            <p class="card-text">Описание: <strong>@Model.Description</strong></p>
            <a href="/Weather/Index" class="btn btn-primary">Назад</a>
        </div>
    </div>
</div>